> library(xml2)
> library(rvest)
> library(stringr)
> Amazonwebpage <- read_html("https://www.amazon.in/OnePlus-Mirror-Black-64GB-Memory/dp/B0756Z43QS?tag=googinhydr18418-21&tag=googinkenshoo-21&ascsubtag=aee9a916-6acd-4409-92ca-3bdbeb549f80")
> title_html <- html_nodes(Amazonwebpage, "h1#title")
> title <- html_text(title_html)
> head(title)
> str_replace_all(title, "[\r\n]" , "")
> rate_html <- html_nodes(Amazonwebpage,"span#acrPopover")
> rate <- html_text(rate_html)
> rate <- str_replace_all(rate, "[\r\n]" , "")
> rate <- str_trim(rate)
> size_html <- html_nodes(Amazonwebpage, "div#variation_size_name")
> size_html <- html_nodes(size_html, "span.selection")
> size <- html_text(size_html)
> size <- str_trim(size)
> head(size)
> color_html <- html_nodes(Amazonwebpage, "div#variation_color_name")
> color_html <- html_nodes(color_html, "span.selection")
> color <- html_text(color_html)
> color <- str_trim(color)
> head(color)
> frameproduct_data <- data.frame(Title = title, Rating = rate, Size = size, Color = color)
> library(jsonlite)
> json_data <- toJSON(frameproduct_data)
